<% if current_user.organisme%>
<div class="form-page">
  <div class="container">
      <div class="col-xs-12 col-md-6 col-sm-offset-4 m-auto">
      <div class="form">
      <h1>Modifie ta mission</h1>
        <%= simple_form_for([:organisation, @mission]) do |f| %>
          <%= f.input :title, :label => "Nom de la mission" %>
          <%= f.input :description, :label => "Description de la mission" %>
          <%= f.input :category, as: :select, collection: ["humanitaire 🙏🏻", "environnement 🌱", "animaux 🐶"], :label => " Categorie" %>
          <%= f.input :address, :label => "Lieu du rendez-vous" %>
          <%= f.input :city, :label => "Ville" %>
          <%= f.input :date, html5: true %>
          <%= f.input :hour, as: :time, html5: true, :label => "Heure du rendez-vous"%>
          <%= f.input :duration,:label => "Durée de la mission"  %>
          <%= f.input :max_participant, :label => "Nombre de participant maximum" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "J'ajoute cette mission", class: "btn btn-ghost-white mb-3"%>
        <% end %>
      </div>
  </div>
</div>
<% else %>
<h2 class= "text-center">PAGE NON ACCESSIBLE</h2>
<% end %>
