<h1 class= "m-5 text-center"> Bonjour <%= current_user.firstname %> ! <br> Voici vos missions:</h1>

<div class="container">
  <div class="cards-mission">
    <%@missions.each do |mission| %>
    <div class="zoom">
      <%= link_to organisation_mission_path(mission) do %>
        <div class="card-mission mb-3">
          <% if mission.photos&.first&.key? %>
            <%= cl_image_tag mission.photos.first.key, height: 300, width: 400 %>
          <% else %>
            <img src="<%=image_path('default.jpg')%>" alt="background">
          <% end %>
          <div class="card-mission-infos">
            <h3><%= mission.title %></h3>
            <div class="mb-3">
              <small class="text-muted"> Dur√©e: <%= mission.duration %> h ‚Ä¢ <%= mission.category %></small>
            </div>
              <div class="card-mission-infos-location">
                <div>
                  <p class="small"><u> Date: </u><%= mission.date %></p>
                  <p class="small"><u> Heure: </u><%= mission.hour %></p>
                </div>
                <small class="card-mission-location"> üìç <%=mission.city%></small>
              </div>
            <p><%= truncate(mission.description, :length => 100)%></p>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
