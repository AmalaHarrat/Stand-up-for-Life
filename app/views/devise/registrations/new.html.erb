<div class="container log-page">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-sm-offset-4 m-auto">
      <div class="log">
        <div class= "log-head">
          <h2>Crée ton compte</h2>
          <small>et rejoins notre grande famille 🫶🏻</small>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :organisme , :as => :radio_buttons, collection: [["Je suis un organisme", true], ["Je suis un bénévole",false]], :label => " " %>
            <%= f.input :firstname,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "firstname" }, :label => "Prénom / Nom de votre organisme"%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" }, :label => "Mot de passe" %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" }, :label => "Confirmer mot de passe" %>
            <%= f.input :photo, as: :file %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Je crée mon compte", class:"btn btn-devise"%>
          </div>
        <% end %>

        <small><%= render "devise/shared/links" %></small>
      </div>
    </div>
  </div>
</div>
